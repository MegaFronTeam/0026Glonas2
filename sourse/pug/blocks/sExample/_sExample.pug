mixin sExample()
	// start sExample
	+b.SECTION.sExample.section#sExample&attributes(attributes)
		.container
			+e.before--1
			+e.before--2
			+e.before--3
			+e.before--4
			+b.section-title.text-center
				h2 Примеры отчётности
				
			+e.slider-wrapper
				+e.slider--js.swiper-container
					.swiper-wrapper
						mixin slide(i,t)
							+e.slide.swiper-slide(href=`img/@2x/example-${i}.jpg` data-fancybox="ex")
								+e.DIV.img-wrap
									img.swiper-lazy.res-i(src="#" data-src=`img/@1x/example-${i}.jpg`, alt="")
								+e.DIV.footer
									.row
										.col
											+e.DIV.title= t
										.col-auto
											img.img-svg(src="img/graf.svg", alt="")
						+slide('1','Виды отчетов и объекты')
						+slide('2',' Главный экран')
						+slide('3','Карточка транспортного средства')
				+arrow
				.swiper-pagination
	// end sExample