mixin sForm()
	// start sForm
	+b.sForm#sForm&attributes(attributes)
		.container
			+form-wrap()
				.row
					+e.txt-col.col-md-6.col-lg-4.col-xxl-auto
						+e.headline Оставить заявку на&nbsp;установку
						+e.descr
							| Профессиональный менеджер
							br.d-none.d-lg-block
							| подберет для вас оптимальное
							br.d-none.d-lg-block
							|решение по&nbsp;мониторингу транспорта
					+e.mid-col.col-md-6.col-lg-4.col-xxl-auto
						+input('+7 (___) - ___ - __ - __', 'tel')
							+e.input-img
								img.lazy(src="#" data-src="img/@2x/sForm-phone.png" alt="")
						+input('E-mail', 'email')
							+e.input-img
								img.lazy(src="#" data-src="img/@2x/sForm-mail.png" alt="")
						+polite()
					+e.right-col.col-lg-4.col-xxl-auto
						+input('Поле для реквизитов и  информации о машинах', 'textarea')
						+e.BUTTON.subm-btn Оставить заявку
	// end sForm